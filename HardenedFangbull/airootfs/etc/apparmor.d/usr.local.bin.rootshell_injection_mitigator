#include <tunables/global>

/usr/local/bin/rootshell_injection_mitigator {
  #include <abstractions/base>
  #include <abstractions/bash>

  capability dac_override,
  capability kill,
  capability sys_ptrace,

  /usr/local/bin/rootshell_injection_mitigator r,
  /bin/bash ix,
  /usr/bin/bash ix,

  # Process monitoring for shell injection detection
  /proc/ r,
  /proc/*/stat r,
  /proc/*/status r,
  /proc/*/cmdline r,
  /proc/*/exe r,
  /proc/*/environ r,
  /proc/*/fd/ r,
  /proc/*/fd/* r,

  # Shell monitoring
  /bin/sh ix,
  /bin/bash ix,
  /usr/bin/bash ix,
  /bin/dash ix,
  /usr/bin/dash ix,

  # TTY and terminal access
  /dev/tty* rw,
  /dev/pts/* rw,

  # Fangbull IDS logging and data directories
  /var/log/fangbull-ids/ rw,
  /var/log/fangbull-ids/** rw,
  
  # Logging
  /var/log/fangbull-rootshell-mitigator.log w,
  /dev/log w,

  # System libraries
  /etc/ld.so.cache r,
  /usr/lib/x86_64-linux-gnu/** mr,

  # Deny dangerous operations
  deny capability sys_admin,
  deny capability sys_module,
  deny /etc/passwd w,
  deny /etc/shadow w,
}
