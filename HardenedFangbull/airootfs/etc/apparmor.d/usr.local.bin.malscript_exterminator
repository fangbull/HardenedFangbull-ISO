#include <tunables/global>

/usr/local/bin/malscript_exterminator {
  #include <abstractions/base>
  #include <abstractions/bash>

  capability dac_override,
  capability kill,
  capability sys_ptrace,

  /usr/local/bin/malscript_exterminator r,
  /bin/bash ix,
  /usr/bin/bash ix,

  # Script analysis access
  /tmp/ r,
  /tmp/** r,
  /var/tmp/ r,
  /var/tmp/** r,
  /dev/shm/ r,
  /dev/shm/** r,
  /home/*/.cache/ r,
  /home/*/.cache/** r,

  # Process monitoring
  /proc/ r,
  /proc/*/stat r,
  /proc/*/status r,
  /proc/*/cmdline r,
  /proc/*/exe r,
  /proc/*/environ r,

  # Common script interpreters
  /usr/bin/python* ix,
  /usr/bin/perl ix,
  /usr/bin/ruby ix,
  /bin/sh ix,
  /usr/bin/php* ix,

  # Fangbull IDS logging and data directories
  /var/log/fangbull-ids/ rw,
  /var/log/fangbull-ids/** rw,
  
  # Logging
  /var/log/fangbull-malscript.log w,
  /dev/log w,

  # System libraries
  /etc/ld.so.cache r,
  /usr/lib/x86_64-linux-gnu/** mr,

  # Deny dangerous operations
  deny capability sys_admin,
  deny capability sys_module,
  deny /etc/passwd w,
  deny /etc/shadow w,
  deny /boot/** rw,
}
