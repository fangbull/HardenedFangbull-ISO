#include <tunables/global>

/usr/local/bin/memory_resident_process_checker {
  #include <abstractions/base>
  #include <abstractions/bash>

  capability dac_override,
  capability sys_ptrace,

  /usr/local/bin/memory_resident_process_checker r,
  /bin/bash ix,
  /usr/bin/bash ix,

  # Memory analysis access
  /proc/ r,
  /proc/*/stat r,
  /proc/*/status r,
  /proc/*/cmdline r,
  /proc/*/exe r,
  /proc/*/maps r,
  /proc/*/mem r,
  /proc/*/smaps r,
  /proc/meminfo r,

  # System monitoring
  /sys/kernel/mm/ r,
  /sys/kernel/mm/** r,

  # Fangbull IDS logging and data directories
  /var/log/fangbull-ids/ rw,
  /var/log/fangbull-ids/** rw,
  
  # Logging
  /var/log/fangbull-memory-checker.log w,
  /dev/log w,

  # System libraries
  /etc/ld.so.cache r,
  /usr/lib/x86_64-linux-gnu/** mr,

  # Deny dangerous operations
  deny capability sys_admin,
  deny capability sys_module,
  deny /etc/passwd w,
  deny /etc/shadow w,
}
