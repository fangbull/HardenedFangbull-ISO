#include <tunables/global>

/usr/local/bin/netlink_monitor_watchdog {
  #include <abstractions/base>
  #include <abstractions/bash>
  #include <abstractions/nameservice>

  capability net_admin,
  capability dac_override,

  /usr/local/bin/netlink_monitor_watchdog r,
  /bin/bash ix,
  /usr/bin/bash ix,

  # Network monitoring access
  /proc/net/ r,
  /proc/net/** r,
  /sys/class/net/ r,
  /sys/class/net/** r,

  # Netlink socket access
  network netlink raw,
  network inet raw,
  network inet6 raw,

  # Process monitoring
  /proc/ r,
  /proc/*/stat r,
  /proc/*/status r,
  /proc/*/cmdline r,
  /proc/*/net/ r,
  /proc/*/net/** r,

  # Fangbull IDS logging and data directories
  /var/log/fangbull-ids/ rw,
  /var/log/fangbull-ids/** rw,
  
  # Logging
  /var/log/fangbull-netlink-monitor.log w,
  /dev/log w,

  # System libraries
  /etc/ld.so.cache r,
  /usr/lib/x86_64-linux-gnu/** mr,

  # Deny dangerous operations
  deny capability sys_admin,
  deny capability sys_module,
  deny /etc/passwd w,
  deny /etc/shadow w,
}
